	# Histogram Track
	<plot>
		type = histogram
		file = SUBSTITUTE_SAMPLE.histogram.circos
		r0   = SUBSTITUTE_SV_INNER_RADIUSr
		r1   = SUBSTITUTE_SV_OUTER_RADIUSr
		min  = 0
		max = SUBSTITUTE_SV_MAX
		thickness   = 4
		color = black
		extend_bin  = no

		<rules>
			<rule>
				condition = var(value) != SUBSTITUTE_CONDITION
				show = no
			</rule>
		</rules>
	</plot>
